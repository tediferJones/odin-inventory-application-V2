extends layout 

block content 
  h1= title 

  form(method='POST' action='')
    div.form-group
      label(for='name') Make Name: 
      input#name.form-control(type='text', name='name', placeholder='Toyota', value=(undefined===make ? '' : make.name))

      hr

      button.btn.btn-primary(type='submit') Submit 

      if errors 
        ul 
          for error in errors 
            li!= error.msg
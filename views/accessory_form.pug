extends layout 

block content 
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Accessory Name: 
      input#name.form-control(type='text', name='name', placeholder='Air Conditioning' value=(undefined===accessory ? '' : accessory.name))

      hr

      button.btn.btn-primary(type='submit') Submit 

      if errors 
        ul 
          for error in errors 
            li!= error.msg